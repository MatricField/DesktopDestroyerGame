<Page x:Name="page" x:Class="DesktopDestroyer.PlayfieldPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopDestroyer"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="PlayfieldPage" Foreground="{x:Null}">

    <Canvas MouseLeftButtonDown="DrawingBoard_MouseLeftButtonDown">
        <Image Source="{Binding BackgroundImage, ElementName=page}"/>
        <Canvas x:Name="DrawingBoard">
        </Canvas>
    </Canvas>
</Page>
